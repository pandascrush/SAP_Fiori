                </ColumnListItem>
            </items>
        </Table> -->
        <VBox id="combinedChartVBox" visible="false">
            <!-- Combined bar and line chart will be rendered here -->
        </VBox>
        <Table id="selectedDataTable" inset="false" visible="false">
            <columns>
                <!-- Columns will be defined dynamically -->
