<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:unified="sap.ui.unified"
    xmlns:core="sap.ui.core"
    controllerName="sap.ui.demo.walkthrough.controller.View1">
    <VBox class="sapUiSmallMargin">
        <Label text="Upload your file" labelFor="fileUploader"/>
        <unified:FileUploader id="fileUploader" name="myFile" fileType="csv" change="onFileChange"/>
        <Text id="fileNameText" text=""/>
        <Button
            text="Submit"
            press="onSubmit"
            type="Emphasized"/>
        <Button
            id="fetchDataButton"
            text="Fetch Data from API"
            press="onFetchData"
            type="Emphasized"/>
        <Button
            id="seeChartButton"
            text="See Chart"
            press="onSeeChart"
            type="Emphasized"/>
